<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="#e2dcdc"
        tools:context="com.example.ujjal.checkboxdemo.MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_title"
            android:textSize="20sp"
            android:textStyle="bold"/>

    <CheckBox
            android:id="@+id/chkBoxMilk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/millk"
            android:textSize="20sp"/>
    <CheckBox
            android:id="@+id/chkBoxSugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sugar"
            android:textSize="20sp"/>
    <CheckBox
            android:id="@+id/chkBoxWater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/water"
            android:textSize="20sp"/>

    <Button
            android:id="@+id/orderBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_txt"
            android:textSize="20dp"
            android:textStyle="bold"/>

    <TextView
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_title"
            android:textSize="20sp"
            android:textStyle="bold"/>
</LinearLayout>
