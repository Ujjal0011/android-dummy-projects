<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        tools:context="com.example.ujjal.datepickerdemo.MainActivity">

    <TextView
            android:id="@+id/currentDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Date"
            android:layout_marginBottom="20dp"/>

    <Button android:id="@+id/selectBtn" android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Select Date" android:textSize="20sp" android:textStyle="bold"
            android:layout_marginBottom="20dp"/>

    <DatePicker android:id="@+id/datePicker" android:layout_width="wrap_content" android:layout_height="wrap_content">

    </DatePicker>
</LinearLayout>
