<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical"
        tools:context="com.example.ujjal.androidedittext.MainActivity">

    <EditText
        android:id="@+id/inputNumber1"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:hint="@string/hint_et_inputNumber1"
        android:inputType="numberDecimal"
        android:backgroundTint="#f7bf06"
        android:textCursorDrawable="@null"/>

    <EditText
        android:id="@+id/inputNumber2"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:hint="@string/hint_et_inputNumber2"
        android:inputType="numberDecimal"
        android:backgroundTint="#f7bf06"
        android:textCursorDrawable="@null"/>

    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:orientation="horizontal">
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="@string/add_btn_txt" android:textSize="20sp"
                android:id="@+id/addBtn" />

        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="@string/sub_btn_txt" android:textSize="20sp"
                android:id="@+id/subBtn" />
    </LinearLayout>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:id="@+id/result"/>
</LinearLayout>
